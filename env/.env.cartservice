# ASP.NET
ASPNETCORE_ENVIRONMENT=Docker
ASPNETCORE_URLS=http://+:80

# Connection string
ConnectionStrings__CartDb=Server=mssql,1433;Database=FreeBookHub_CartDb;User Id=sa;Password=Your_password123;TrustServerCertificate=True

# Внутренние сервисы
OrderService__BaseUrl=http://orderservice
CatalogService__BaseUrl=http://catalogservice

# JWT настройки
Auth__JwtSettings__Issuer=FreeBookHub
Auth__JwtSettings__Audience=FreeBookHubUsers
Auth__JwtSettings__SecretKey=my-256-bit-secret-key-is-secure!
Auth__JwtSettings__AccessTokenExpiryMinutes=60
Auth__JwtSettings__RefreshTokenExpiryDays=7

# Общий внутренний API ключ (для межсервисного взаимодействия)
InternalApi__SecretKey=super-secret-shared-key
