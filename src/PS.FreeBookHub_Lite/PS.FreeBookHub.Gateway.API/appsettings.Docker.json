{
  "ReverseProxy": {
    "Routes": {
      "auth_route": {
        "ClusterId": "auth_cluster",
        "Match": { "Path": "/api/auth/{**catch-all}" }
      },
      "cart_route": {
        "ClusterId": "cart_cluster",
        "Match": { "Path": "/api/cart/{**catch-all}" }
      },
      "catalog_route": {
        "ClusterId": "catalog_cluster",
        "Match": { "Path": "/api/catalog/{**catch-all}" }
      },
      "order_route": {
        "ClusterId": "order_cluster",
        "Match": { "Path": "/api/orders/{**catch-all}" }
      },
      "payment_route": {
        "ClusterId": "payment_cluster",
        "Match": { "Path": "/api/payments/{**catch-all}" }
      }
    },
    "Clusters": {
      "auth_cluster": {
        "Destinations": {
          "auth_destination": { "Address": "http://authservice" }
        }
      },
      "cart_cluster": {
        "Destinations": {
          "cart_destination": { "Address": "http://cartservice" }
        }
      },
      "catalog_cluster": {
        "Destinations": {
          "catalog_destination": { "Address": "http://catalogservice" }
        }
      },
      "order_cluster": {
        "Destinations": {
          "order_destination": { "Address": "http://orderservice" }
        }
      },
      "payment_cluster": {
        "Destinations": {
          "payment_destination": { "Address": "http://paymentservice" }
        }
      }
    }
  }
}
