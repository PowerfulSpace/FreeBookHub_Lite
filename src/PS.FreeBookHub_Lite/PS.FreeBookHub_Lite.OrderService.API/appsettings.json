{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "OrderDb": "Server=DESKTOP-F9SMEKT;Database=FreeBookHub_OrderDb;Trusted_Connection=True;TrustServerCertificate=true"
  },

  "PaymentService": {
    "BaseUrl": "https://localhost:7177"
  },

  "Auth": {
    "JwtSettings": {
      "Issuer": "FreeBookHub",
      "Audience": "FreeBookHubUsers",
      "SecretKey": "my-256-bit-secret-key-is-secure!",
      "AccessTokenExpiryMinutes": 60, //В будущем установить 15. 60 на вермя теста.
      "RefreshTokenExpiryDays": 7
    }
  },

  "InternalApi": {
    "SecretKey": "super-secret-shared-key"
  },

  "RabbitMQ": {
    "HostName": "localhost",
    "ExchangeName": "bookhub.exchange",
    "PaymentCompletedQueue": "payment.completed",
    "PaymentCompletedRoutingKey": "payment.completed",
    "OrderCreatedRoutingKey": "order.created",
    "PaymentCompletedDeadLetterExchange": "bookhub.exchange.dlx",
    "PaymentCompletedDeadLetterQueue": "payment.completed.dlq",
    "PaymentCompletedDeadLetterRoutingKey": "payment.completed.dlq"
  },

  "Redis": {
    "ConnectionString": "localhost:6379"
  }


}
